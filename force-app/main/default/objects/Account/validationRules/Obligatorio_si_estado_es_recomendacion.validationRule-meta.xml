<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Obligatorio_si_estado_es_recomendacion</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( ERUM_Canal_de_Origen__c  , &apos;Recomendacion&apos;) || ISPICKVAL( ERUM_Canal_de_Origen__c  , &apos;Gerencia&apos;),ISBLANK( ERUM_Recomendado_por__c ))</errorConditionFormula>
    <errorDisplayField>ERUM_Recomendado_por__c</errorDisplayField>
